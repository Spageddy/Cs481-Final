<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    NavigationPage.HasNavigationBar= "false"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Final1"
    xmlns:xfg="clr-namespace:XFGloss;assembly=XFGloss"
    x:Class="Final1.MainPage">
    
    <xfg:ContentPageGloss.BackgroundGradient>
        <xfg:Gradient Rotation="150" >
            <xfg:GradientStep StepColor="Green" StepPercentage="0" />
            <xfg:GradientStep StepColor="Blue" StepPercentage="1" />
        </xfg:Gradient>
    </xfg:ContentPageGloss.BackgroundGradient>
    
    <ContentPage.Content>
       
<Grid>
            <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button
            x:Name="locationButton"
            Grid.Row="0"
            Text="Get Location"
            VerticalOptions="End"
            HorizontalOptions="Center"
             Clicked="GetLocation_Clicked"
            />
        <Entry
            x:Name="locationEntry"
            Grid.Row="1"
            Placeholder="Enter a location: Zipcode,City,State"
            VerticalOptions="Start"
            HorizontalOptions="Center"
            Completed="Location_Entered"
            />  
    </Grid>
   </ContentPage.Content>
</ContentPage>